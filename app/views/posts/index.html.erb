<h1 class="lead text-center">Showing all Post</h1>
  <div class="row">
    <div class="col-md-12">
    <% if @posts.nil? %>
      <%= content_tag(:h2, "there is no post", class: "text-center text-info") %>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.subtitle %></td>
            <td><%= link_to "Show more", post, class: "btn btn-default" %></td>
            <td><%= link_to "Update", edit_post_path(post), class: "btn btn-info" %></td>
            <td><%= link_to "Remove", post, method: :delete, data: { confirm: "Are you sure?"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end -%>
    </div>
  </div>
