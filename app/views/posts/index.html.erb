<h1 class="page-header text-center">Showing all Post</h1>
  <div class="row">
    <div class="col-md-12">
    <% if @posts.nil? %>
      <%= content_tag(:h2, "there is no post", class: "text-center text-info") %>
    <% else %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-sm-1">#ID</th>
            <th class="col-sm-4">Title</th>
            <th class="col-sm-3">Subtitle</th>
            <th class="col-sm-4 text-right">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.subtitle %></td>
            <td class="text-right">
              <%= link_to "Show", post, class: "btn btn-info" %>
              <%= link_to "Update", edit_post_path(post), class: "btn btn-warning" %>
              <%= link_to "Remove", post, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end -%>
    </div>
  </div>
