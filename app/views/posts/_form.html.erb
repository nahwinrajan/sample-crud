  <div class="page-header text-center">
    <h1><%= local_assigns[:form_title] %></h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @post do |f| %>
          <%= render partial: 'shared/error_messages', locals: {mdl:@post } %>

          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:"form-control", placeholder:"title goes in here" %>
          </div>

          <div class="form-group">
            <%= f.label :subtitle %>
            <%= f.text_field :subtitle, class:"form-control", placeholder:"subtitle goes in here" %>
          </div>

          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, cols: "25", rows: "5", class:"form-control", placeholder:"post content goes in here" %>
          </div>

          <div class="form-group">
            <a href="<%= root_path %>" class="btn btn-danger btn-lg">Cancel</a>
            <%= f.submit local_assigns[:submit_text], class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
    </div>
  </div>
